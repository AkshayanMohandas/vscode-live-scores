  "activationEvents": [
    "onStartupFinished",
    "onCommand:footballLiveScores.openDashboard",
    "onCommand:footballLiveScores.refreshScores"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "footballLiveScores.openDashboard",
        "title": "Sports: Open Live Scores Dashboard"
      },
      {
        "command": "footballLiveScores.refreshScores",
        "title": "Sports: Refresh Live Scores"
      }
    ],
    "configuration": {
      "title": "Live Sports Scores",
      "properties": {
        "footballLiveScores.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for football-data.org (https://www.football-data.org/client/register). Required for football live scores."
        },
        "footballLiveScores.refreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 10,
          "description": "Polling interval in seconds for refreshing scores (applies to both football and cricket)."
        },
        "footballLiveScores.favoriteCompetitionId": {
          "type": "number",
          "default": 2021,
          "description": "Default football competition ID (e.g. 2021 = Premier League) for live scores."
        },
        "footballLiveScores.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show a combined live sports status bar item."
        },
        "footballLiveScores.enableCricket": {
          "type": "boolean",
          "default": true,
          "description": "Enable cricket live scores using cricketdata.org (cricapi)."
        },
        "footballLiveScores.cricketApiKey": {
          "type": "string",
          "default": "",
          "description": "API key for cricketdata.org/cricapi, used with https://api.cricapi.com/v1/currentMatches."
        },
        "footballLiveScores.cricketMaxMatches": {
          "type": "number",
          "default": 10,
          "minimum": 1,
          "description": "Maximum number of cricket matches to show in the dashboard."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
